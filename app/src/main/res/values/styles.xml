<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"></style>

    <style name="BaseRadioButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/base_text</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/base_radio_button</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="BaseButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/base_text</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/base_radio_button</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="MyNavigationDrawerTheme" parent="MaterialNavigationDrawerTheme">
        <item name="colorPrimary">#ff4a4b4a</item>
        <item name="colorPrimaryDark">#ff490702</item>
        <item name="colorAccent">#ff007dff</item>
        <item name="sectionStyle">@style/MySectionTheme</item>
        <item name="singleAccount">true</item>

    </style>

    <style name="MySectionTheme">
        <item name="sectionColorText">@color/base_yellow</item>
    </style>


</resources>
